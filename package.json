{
  "name": "apibench",
  "version": "0.1.0",
  "description": "A simple sample api application",
  "type": "module",
  "main": "dist/server.js",
  "exports": {
    "./package.json": "./package.json"
  },
  "scripts": {
    "prebootstrap": "npx only-allow pnpm",
    "bootstrap": "pnpm install",
    "build": "run-s clean:outputs build:outputs",
    "build:outputs": "tsc -p ./tsconfig.json",
    "commit": "git-cz",
    "clean": "rm -rf .turbo node_modules",
    "clean:outputs": "rimraf ./dist",
    "dev": "run-p dev:start typecheck",
    "dev:start": "tsx watch --inspect --env-file=.env src/server.ts",
    "format": "biome format ./src",
    "lint": "biome lint ./src",
    "prepare": "husky",
    "typecheck": "tsc -p ./tsconfig.json --noEmit",
    "start": "run-s run:infra dev",
    "run:infra": "docker compose up --build --remove-orphans -d ab-wait-for-dependencies",
    "run:infra:stop": "docker compose stop",
    "test": "NODE_OPTIONS='--import tsx' vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [],
  "author": "Manuel S. Martone <manuel.martone@gmail.com>",
  "license": "MIT",
  "packageManager": "pnpm@10.13.1",
  "dependencies": {
    "@event-driven-io/pongo": "0.17.0-alpha.5",
    "@fastify/autoload": "^6.3.1",
    "@fastify/one-line-logger": "^2.0.2",
    "@fastify/swagger": "^9.5.1",
    "@fastify/swagger-ui": "^5.2.3",
    "@scalar/fastify-api-reference": "^1.32.10",
    "@t3-oss/env-core": "^0.13.8",
    "arecibo": "^4.0.3",
    "bcrypt": "^6.0.0",
    "close-with-grace": "^2.2.0",
    "dotenv": "^17.2.0",
    "fastify": "^5.4.0",
    "fastify-plugin": "^5.0.1",
    "fastify-type-provider-zod": "^5.0.1",
    "figlet": "^1.8.1",
    "mongodb": "^6.18.0",
    "zod": "^4.0.8",
    "zod-to-json-schema": "^3.24.6"
  },
  "devDependencies": {
    "@biomejs/biome": "2.1.2",
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@commitlint/config-pnpm-scopes": "^19.8.0",
    "@types/bcrypt": "^6.0.0",
    "@types/figlet": "^1.7.0",
    "@types/node": "^22.15.29",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "fastify-tsconfig": "^3.0.0",
    "git-cz": "^4.9.0",
    "husky": "^9.1.7",
    "mongodb-memory-server": "^10.1.4",
    "npm-run-all": "^4.1.5",
    "rimraf": "^6.0.1",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "vitest": "^3.2.3"
  }
}
